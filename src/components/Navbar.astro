---
const links = [
    { name: 'Anasayfa', href: '/' },
    { name: 'Çalışma Alanlarımız', href: '/calisma-alanlarimiz' },
    { name: 'Blog', href: '/blog' },
    { name: 'İletişim', href: '/iletisim' },
];

const hesaplamaAraclari = [
    { name: 'Kıdem Tazminatı Hesaplama', href: '/hesaplama-araclari/kidem-tazminati' },
    { name: 'İhbar Tazminatı Hesaplama', href: '/hesaplama-araclari/ihbar-tazminati' },
    { name: 'Avukatlık Ücreti Hesaplama', href: '/hesaplama-araclari/avukatlik-ucreti' },
];
---

<nav class="fixed w-full z-50 top-0 start-0 border-b border-white/10 bg-slate-950/80 backdrop-blur-md">
    <div class="max-w-7xl mx-auto flex flex-wrap items-center justify-between py-6 px-4 md:py-8">
        <a href="/" class="flex items-center gap-3 group">
            <img src="/logo.png" alt="Dişçi Hukuk Bürosu" class="h-20 md:h-24 w-auto object-contain transition-transform group-hover:scale-105" />
        </a>
        <button id="mobile-menu-toggle" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-slate-400 rounded-lg md:hidden hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-600" aria-controls="navbar-default" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
            </svg>
        </button>
        <div class="hidden w-full md:block md:w-auto" id="navbar-default">
            <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-slate-800 rounded-lg bg-slate-900 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent">
                {links.slice(0, 3).map(link => (
                    <li>
                        <a href={link.href} class="block py-2 px-3 text-slate-300 rounded hover:bg-slate-800 md:hover:bg-transparent md:border-0 md:hover:text-gold-500 md:p-0 transition-colors duration-200">{link.name}</a>
                    </li>
                ))}
                
                <!-- Hesaplama Araçları Dropdown -->
                <li class="relative group/dropdown">
                    <a href="/hesaplama-araclari" class="flex items-center gap-1 py-2 px-3 text-slate-300 rounded hover:bg-slate-800 md:hover:bg-transparent md:border-0 md:hover:text-gold-500 md:p-0 transition-colors duration-200">
                        Hesaplama Araçları
                        <svg class="w-3 h-3 ml-1 transition-transform duration-200 group-hover/dropdown:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </a>
                    <!-- Dropdown Menu -->
                    <div class="md:absolute md:left-1/2 md:-translate-x-1/2 md:top-full md:pt-2 md:opacity-0 md:invisible group-hover/dropdown:md:opacity-100 group-hover/dropdown:md:visible transition-all duration-200">
                        <ul class="md:bg-slate-900 md:border md:border-slate-700 md:rounded-xl md:shadow-xl md:shadow-black/20 md:py-2 md:min-w-[260px] mt-2 md:mt-0 pl-4 md:pl-0">
                            {hesaplamaAraclari.map(tool => (
                                <li>
                                    <a href={tool.href} class="block py-2 px-4 text-slate-300 hover:bg-slate-800 hover:text-gold-500 transition-colors duration-200 text-sm md:text-base">
                                        {tool.name}
                                    </a>
                                </li>
                            ))}
                            <li class="border-t border-slate-700 mt-2 pt-2">
                                <a href="/hesaplama-araclari" class="block py-2 px-4 text-gold-500 hover:bg-slate-800 transition-colors duration-200 text-sm font-medium">
                                    Tüm Araçları Gör →
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                
                {links.slice(3).map(link => (
                    <li>
                        <a href={link.href} class="block py-2 px-3 text-slate-300 rounded hover:bg-slate-800 md:hover:bg-transparent md:border-0 md:hover:text-gold-500 md:p-0 transition-colors duration-200">{link.name}</a>
                    </li>
                ))}
            </ul>
        </div>
    </div>
</nav>

<script>
    const toggleButton = document.getElementById('mobile-menu-toggle');
    const navbarDefault = document.getElementById('navbar-default');

    if (toggleButton && navbarDefault) {
        toggleButton.addEventListener('click', () => {
            navbarDefault.classList.toggle('hidden');
        });
    }
</script>
