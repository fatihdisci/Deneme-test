---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<section class="py-24 bg-slate-900 border-t border-slate-800">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6" data-aos="fade-up">
            <div>
                <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">Güncel İçerikler</h2>
                <p class="text-slate-400 text-lg">Yapay zeka ve hukuk dünyasından son gelişmeler ve analizler.</p>
            </div>
            <a href="/blog" class="inline-flex items-center gap-2 text-gold-500 font-semibold hover:text-gold-400 transition-colors">
                Tümünü Gör
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
        </div>

        {posts.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {posts.map((post, index) => (
                    <article class="bg-slate-950 rounded-2xl overflow-hidden border border-slate-800 hover:border-slate-700 transition-colors flex flex-col h-full" data-aos="fade-up" data-aos-delay={index * 100}>
                        {post.data.image && (
                            <img src={post.data.image} alt={post.data.title} class="w-full h-48 object-cover opacity-80 hover:opacity-100 transition-opacity" />
                        )}
                        {!post.data.image && (
                            <div class="w-full h-48 bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center">
                                <span class="text-4xl">⚖️</span>
                            </div>
                        )}
                        <div class="p-6 flex-grow flex flex-col">
                            <div class="flex flex-wrap gap-2 mb-4">
                                <span class="text-xs font-semibold px-2 py-1 rounded bg-gold-900/30 text-gold-500 border border-gold-900/50">
                                    {post.data.category || 'Genel'}
                                </span>
                                <time class="text-xs text-slate-500 self-center">
                                    {post.data.pubDate.toLocaleDateString('tr-TR', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric',
                                    })}
                                </time>
                            </div>
                            <h3 class="text-xl font-bold text-white mb-3 line-clamp-2">
                                <a href={`/blog/${post.slug}`} class="hover:text-gold-500 transition-colors">
                                    {post.data.title}
                                </a>
                            </h3>
                            <p class="text-slate-400 text-sm mb-6 line-clamp-3">
                                {post.data.description}
                            </p>
                            <div class="mt-auto pt-4 border-t border-slate-900">
                                <a href={`/blog/${post.slug}`} class="text-white hover:text-gold-500 text-sm font-medium transition-colors">
                                    Devamını Oku &rarr;
                                </a>
                            </div>
                        </div>
                    </article>
                ))}
            </div>
        ) : (
            <div class="text-center py-12 bg-slate-900/50 rounded-2xl border border-slate-800 border-dashed">
                <p class="text-slate-500 text-lg">Henüz yayınlanmış bir yazı bulunmamaktadır.</p>
            </div>
        )}
    </div>
</section>
