<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Elements with Gold/Navy Radial Gradient -->
    <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-full h-full bg-slate-900/90"></div>
        <!-- Removed center gold gradient -->
        <div class="absolute top-20 right-0 w-[400px] h-[400px] bg-navy/40 rounded-full blur-[100px]"></div>
        <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-anthracite/30 rounded-full blur-[100px]"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 text-center">
        <div data-aos="fade-up" data-aos-duration="1000">
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 tracking-tight text-white font-serif leading-tight">
                Hukuki Güvenlik ve<br/>Stratejik Çözüm Ortaklığı
            </h1>
            <p class="text-xl md:text-2xl text-slate-400 max-w-3xl mx-auto mb-10 leading-relaxed">
                Evrensel hukuk ilkeleri ışığında, şeffaf ve etik değerlere bağlı danışmanlık hizmetleri.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="/iletisim" class="px-8 py-4 bg-amber-500 hover:bg-amber-600 text-slate-950 rounded-lg font-bold text-lg transition-all shadow-lg shadow-amber-500/20 hover:scale-105 active:scale-95">
                    İletişime Geçin
                </a>
                <a href="/calisma-alanlarimiz" class="px-8 py-4 bg-slate-900/50 hover:bg-slate-800 text-white border border-slate-700 rounded-lg font-semibold text-lg transition-all backdrop-blur-sm hover:border-slate-600">
                    Çalışma Alanlarımız
                </a>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce text-slate-500">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>

