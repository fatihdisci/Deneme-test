<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-full h-full bg-slate-950"></div>
        <div class="absolute top-20 right-0 w-[500px] h-[500px] bg-blue-600/20 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-amber-600/10 rounded-full blur-[120px]"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 text-center">
        <div data-aos="fade-up" data-aos-duration="1000">
            <span class="inline-block px-4 py-2 rounded-full border border-slate-700 bg-slate-900/50 text-amber-500 text-sm font-medium mb-6">
                İzmir Barosu
            </span>
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-6 tracking-tight text-white">
                Dişçi Hukuk Bürosu
            </h1>
            <p class="text-xl md:text-2xl text-slate-400 max-w-3xl mx-auto mb-10 leading-relaxed">
                İzmir merkezli büromuz; şeffaflık, dürüstlük ve meslek etiği ilkeleri çerçevesinde hukuki danışmanlık ve avukatlık hizmeti sunmaktadır.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="/iletisim" class="px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white rounded-lg font-bold text-lg transition-all shadow-lg shadow-amber-900/20 hover:scale-105 active:scale-95">
                    İletişime Geçin
                </a>
                <a href="/hizmetlerimiz" class="px-8 py-4 bg-slate-900/50 hover:bg-slate-800 text-white border border-slate-700 rounded-lg font-semibold text-lg transition-all backdrop-blur-sm hover:border-slate-600">
                    Hizmetlerimiz
                </a>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce text-slate-500">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>
