---
import { ServiceIcon } from './ServiceIcon';

// Featured services in specific order: sirket-danismanligi, icra-hukuku, ceza-hukuku
const featuredServices = [
    {
        title: "Şirket Danışmanlığı",
        description: "Şirket kuruluşu, sözleşme hazırlığı, birleşme ve devralma işlemlerinde stratejik kurumsal danışmanlık.",
        slug: "sirket-danismanligi"
    },
    {
        title: "İcra Hukuku",
        description: "İcra takibi, haciz işlemleri, iflas süreçleri ve alacak tahsilinde etkin hukuki çözümler.",
        slug: "icra-hukuku"
    },
    {
        title: "Ceza Hukuku",
        description: "Ağır ceza davaları, soruşturma ve kovuşturma süreçlerinde hukuki danışmanlık ve temsil.",
        slug: "ceza-hukuku"
    }
];
---

<section class="py-24 bg-slate-950/50 relative">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-4 font-serif">Çalışma Alanlarımız</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {featuredServices.map((service, index) => (
                <a 
                    href={`/calisma-alanlarimiz/${service.slug}`}
                    class="group p-8 rounded-2xl bg-slate-900 border border-slate-800 hover:border-gold-500/50 transition-all duration-300 hover:shadow-2xl hover:shadow-gold-500/10 hover:-translate-y-2" 
                    data-aos="fade-up" 
                    data-aos-delay={index * 100}
                >
                    <div class="w-16 h-16 bg-slate-800 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                        <ServiceIcon client:load slug={service.slug} size={40} className="text-gold-500" />
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-gold-500 transition-colors font-serif">{service.title}</h3>
                    <p class="text-slate-400 group-hover:text-slate-300 transition-colors">{service.description}</p>
                </a>
            ))}
        </div>

        <div class="text-center mt-12" data-aos="fade-up">
            <a href="/calisma-alanlarimiz" class="inline-flex items-center gap-2 px-6 py-3 border border-slate-700 hover:border-gold-500/50 text-white rounded-lg font-semibold transition-all hover:bg-slate-900">
                Tüm Çalışma Alanlarını Görüntüle
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
        </div>
    </div>
</section>
