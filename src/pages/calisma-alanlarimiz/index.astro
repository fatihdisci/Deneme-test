---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ServiceIcon } from '../../components/ServiceIcon';
import { GlowingEffect } from '../../components/ui/glowing-effect';

const services = await getCollection('services');
---

<Layout title="Çalışma Alanlarımız | Dişçi Hukuk Bürosu" description="Ceza, Ticaret, İdare ve Gayrimenkul hukuku başta olmak üzere, Dişçi Hukuk Bürosu'nun sunduğu temel hukuki danışmanlık ve faaliyet alanları.">
  <!-- Header -->
  <section class="py-20 bg-slate-900 border-b border-white/5">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 font-serif" data-aos="fade-up">Çalışma Alanlarımız</h1>
      <p class="text-slate-400 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        Büromuz bünyesinde takip edilen temel hukuk dalları ve faaliyet alanları.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-24 bg-slate-950">
    <div class="container mx-auto px-4">
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 list-none p-0 m-0">
        {services.map((service, index) => (
          <li class="relative h-full rounded-[1.25rem] border-[0.75px] border-slate-700/50 p-2 md:rounded-[1.5rem] md:p-3" data-aos="fade-up" data-aos-delay={index * 100}>
            <GlowingEffect
              client:load
              spread={40}
              glow={true}
              disabled={false}
              proximity={64}
              inactiveZone={0.01}
              borderWidth={2}
            />
            <a 
              href={`/calisma-alanlarimiz/${service.slug}`}
              class="group block h-full"
            >
              <div class="relative flex h-full flex-col justify-between gap-4 overflow-hidden rounded-xl border-[0.75px] border-slate-700 bg-slate-900 p-6 md:p-8 shadow-sm">
                <div>
                  <div class="w-14 h-14 bg-gold-500/10 rounded-xl flex items-center justify-center mb-5 group-hover:bg-gold-500/20 transition-colors">
                    <ServiceIcon client:load slug={service.slug} size={28} className="text-gold-500" />
                  </div>
                  <h2 class="text-xl md:text-2xl font-bold text-white mb-3 font-serif group-hover:text-gold-500 transition-colors">
                    {service.data.title}
                  </h2>
                  <p class="text-slate-400 text-sm leading-relaxed">
                    {service.data.description}
                  </p>
                </div>
                <span class="inline-flex items-center text-gold-500 font-semibold text-sm group-hover:translate-x-2 transition-transform mt-2">
                  Detaylı Bilgi
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </span>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </section>
</Layout>
