---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { FAQAccordion } from '../../components/FAQAccordion';
import { ServiceIcon } from '../../components/ServiceIcon';

export async function getStaticPaths() {
  const serviceEntries = await getCollection('services');
  return serviceEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Fetch related blog posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(post => {
      // Fuzzy matching: Category equals title OR Title is inside Category OR Category is inside Title
      const cat = (post.data.category || '').toLowerCase();
      const title = entry.data.title.toLowerCase();
      // Tag matching
      const hasTag = post.data.tags?.some(tag => tag.toLowerCase() === title);
      
      return cat === title || cat.includes(title) || title.includes(cat) || hasTag;
  })
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title={entry.data.title} description={entry.data.description}>
  <article class="py-24 bg-slate-950 min-h-screen">
    <!-- Header -->
    <div class="container mx-auto px-4 max-w-4xl mb-12 text-center" data-aos="fade-up">
        <div class="mb-6 flex justify-center">
            <ServiceIcon client:load slug={entry.slug} size={64} className="text-gold-500" />
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight font-serif">
            {entry.data.title}
        </h1>
        
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">
            {entry.data.description}
        </p>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-6 max-w-4xl">
        <div class="prose prose-invert prose-lg mx-auto max-w-4xl py-12 service-content
          text-justify hyphens-auto prose-p:text-justify
          prose-p:text-slate-300 prose-p:leading-relaxed prose-p:mb-6
          prose-headings:text-gold-500 prose-headings:font-serif prose-headings:mb-4 prose-headings:mt-10
          prose-h2:text-3xl prose-h3:text-2xl
          prose-li:text-slate-300 prose-li:my-2
          prose-ul:list-disc prose-ul:pl-6 prose-ul:my-4
          prose-ol:list-decimal prose-ol:pl-6 prose-ol:my-4
          prose-strong:text-white prose-strong:font-semibold" data-aos="fade-up" data-aos-delay="200" lang="tr">
            <Content />

            {entry.data.faqs && entry.data.faqs.length > 0 && (
                <div class="mt-12 not-prose">
                    <h2 class="text-3xl font-serif text-gold-500 mb-6">Sıkça Sorulan Sorular</h2>
                    <FAQAccordion client:visible faqs={entry.data.faqs} />
                </div>
            )}
        </div>
    </div>

    <!-- Related Articles Section -->
    {relatedPosts.length > 0 && (
        <div class="container mx-auto px-4 max-w-4xl mt-20 pt-10 border-t border-white/10">
            <h3 class="text-2xl font-serif text-gold-500 mb-8 flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path></svg>
                {entry.data.title} Hakkında Güncel Makaleler
            </h3>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {relatedPosts.map(post => (
                    <a href={`/blog/${post.slug}`} class="group block bg-slate-900/50 border border-slate-800 rounded-xl p-5 hover:border-gold-500/30 transition-all hover:bg-slate-900 duration-300">
                        <div class="mb-3">
                             <time class="text-xs text-slate-500">{post.data.pubDate.toLocaleDateString('tr-TR')}</time>
                        </div>
                        <h4 class="text-md font-bold text-slate-200 group-hover:text-gold-400 mb-2 font-serif line-clamp-2">
                            {post.data.title}
                        </h4>
                        <p class="text-xs text-slate-400 line-clamp-2">
                            {post.data.description}
                        </p>
                    </a>
                ))}
            </div>
            
            <div class="mt-8 text-center">
                 <a href="/blog" class="text-slate-500 text-sm hover:text-gold-500 transition-colors inline-flex items-center gap-1">
                    Tüm makaleleri görüntüle
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                 </a>
            </div>
        </div>
    )}

    <style>
        .service-content,
        .service-content p,
        .service-content li {
            text-align: justify !important;
            -webkit-hyphens: auto !important;
            -moz-hyphens: auto !important;
            -ms-hyphens: auto !important;
            hyphens: auto !important;
        }
    </style>

    <!-- Footer / Navigation -->
    <div class="container mx-auto px-4 max-w-4xl mt-16 pt-8 border-t border-white/10">
        <a href="/calisma-alanlarimiz" class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors group">
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            Tüm Hizmetler
        </a>
    </div>
  </article>
</Layout>
