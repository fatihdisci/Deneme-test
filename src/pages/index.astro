---
import Layout from '../layouts/Layout.astro';
import KeyServices from '../components/KeyServices.astro';
import LatestPosts from '../components/LatestPosts.astro';

// ARKA PLAN RESMİ AYARLARI
// 1. Masaüstü (PC) için resim:
const desktopImage = "/ana-resim.jpg";

// 2. Mobil (Telefon) için resim:
// (Eğer mobilde farklı resim olsun isterseniz buraya o resmin yolunu yazın. Örnek: "/mobil-resim.jpg")
const mobileImage = "/ana-resim.jpg"; 
---

<Layout title="Av. Fatih Dişçi | İzmir" description="İzmir Barosu'na kayıtlı avukatlık ve hukuki danışmanlık hizmetleri.">
    
    <section class="relative h-screen w-full flex items-center justify-center overflow-hidden bg-slate-950">
        
        <div class="absolute inset-0 z-0">
            <picture>
                <!-- Mobil İçin -->
                <source media="(max-width: 768px)" srcset={mobileImage} />
                <!-- Masaüstü İçin -->
                <source media="(min-width: 769px)" srcset={desktopImage} />
                <!-- Varsayılan -->
                <img 
                    src={desktopImage}
                    alt="Legal Architecture Background" 
                    class="w-full h-full object-cover opacity-30 grayscale"
                />
            </picture>
            <div class="absolute inset-0 bg-gradient-to-b from-slate-950/95 via-slate-950/80 to-slate-950"></div>
        </div>

        <div class="relative z-10 container mx-auto px-4 text-center" data-aos="fade-up" data-aos-duration="1500">
            
            <div class="w-px h-24 bg-gradient-to-b from-transparent via-gold-500 to-transparent mx-auto mb-8 opacity-70"></div>

            <figure class="max-w-4xl mx-auto">
                <blockquote class="text-4xl md:text-6xl lg:text-7xl font-bold text-white font-serif leading-tight tracking-tight">
                    "Hukuk, <br />
                    <span class="text-gold-500 drop-shadow-sm">tutkudan arınmış</span> <br />
                    akıldır."
                </blockquote>
                <figcaption class="mt-8 text-lg md:text-xl text-slate-400 font-light tracking-widest uppercase flex items-center justify-center gap-4">
                    <span class="w-8 h-px bg-slate-800"></span>
                    Aristoteles
                    <span class="w-8 h-px bg-slate-800"></span>
                </figcaption>
            </figure>



        </div>

        <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 flex flex-col items-center gap-2 opacity-50 animate-bounce">
            <span class="text-[10px] text-slate-500 tracking-widest uppercase">Keşfet</span>
            <svg class="w-5 h-5 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>

    </section>

    <KeyServices />
    <LatestPosts />

</Layout>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
